{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    "dpacks/**/*.json",
    "task/*",
    "hardhat.config.ts",
    "test/**/*"
  ]
}
